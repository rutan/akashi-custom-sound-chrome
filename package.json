{
  "name": "akashi-custom-sound",
  "version": "1.1.0",
  "author": "ru_shalm <ru_shalm@hazimu.com>",
  "license": "MIT",
  "scripts": {
    "build": "run-s clean build:*",
    "build:webpack": "cross-env NODE_ENV=production webpack",
    "build:copy": "cpx './public/**/*' './app'",
    "build:manifest": "node ./scripts/buildManifest.js",
    "watch": "run-p watch:*",
    "watch:webpack": "webpack -w",
    "watch:copy": "cpx './public/**/*' './app' -w",
    "watch:manifest": "node ./scripts/buildManifest.js -w",
    "clean": "run-p clean:*",
    "clean:app": "rimraf ./app",
    "zip": "run-s zip:*",
    "zip:mkdir": "mkdirp ./_dist",
    "zip:output": "deployment-zip ./app",
    "test": "run-s test:*",
    "test:type-check": "tsc --noEmit",
    "format": "prettier --write ./src",
    "prepare": "husky install",
    "pre-commit": "pretty-quick --staged"
  },
  "dependencies": {
    "goober": "^2.0.37",
    "preact": "^10.5.13"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/plugin-transform-react-jsx": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@rutan/deployment-zip": "^0.1.0",
    "@types/chrome": "^0.0.134",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "babel-loader": "^8.2.2",
    "chokidar": "^3.5.1",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "ejs": "^3.1.6",
    "husky": "^6.0.0",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "yaml": "^1.10.2"
  }
}
